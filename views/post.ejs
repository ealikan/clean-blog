<%- include("partials/_header") -%>

<body>

  <!-- Navigation -->
  <%- include("partials/_navbar") -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <%= write.message %>
            <p>Posted by <%= write.name %> on <%= write.dateCreated %></p>

          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          

          <h2 class="section-heading"><%= write.message %></h2>

        
          <p>Posted by <%= write.name %> on <%= write.dateCreated %></p>

        


         
        </div>
      </div>
    </div>
  </article>

  <div class="tm-bg-gray tm-share-box">
    <div class="text-center">
      <a href="/writes/<%= write._id %>" class="btn btn-primary p-0 mb-4 tm-btn-animate tm-btn-download tm-icon-download"><span>Update Details</span></a>	
    </div>	
    <div class="text-center">
      <a href="/writes/<%= write._id %>?_method=delete" class="btn btn-danger p-0 tm-btn-animate tm-btn-download tm-icon-download" onclick="return confirm('emin misiniz?')"><span>Delete Photo</span></a>	
    </div>								
  </div>

  <hr>

  <!-- Footer -->
  <%- include("partials/_footer") -%>
  
  
  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
